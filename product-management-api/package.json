{
  "name": "product-management-api",
  "version": "1.0.0",
  "description": "RESTful API for product management with SQLite",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/database/seed.ts",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed"
  },
  "keywords": [
    "api",
    "rest",
    "fastify",
    "sqlite",
    "products"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "better-sqlite3": "^9.4.3",
    "drizzle-orm": "^0.29.4",
    "fastify": "^4.26.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "drizzle-kit": "^0.20.14",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
